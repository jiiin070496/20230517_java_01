<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="board">
<!--
  		SELECT * 
		FROM (SELECT ROWNUM no, n.*, (SELECT mid FROM member WHERE mid = #{mid}) name
				FROM (SELECT * FROM board<include refid="search_where" /> ORDER BY ref, rstep DESC) n
				ORDER BY bno DESC) n 
		WHERE bno BETWEEN #{beginList} and #{endList}
 -->
<!-- 전체 게시글 -->
	<select id="selectList" resultType="BoardDto">
		SELECT * FROM board ORDER BY ref desc, rstep asc
	</select>

<!-- 게시판 조회수 -->
	<update id="boardReadCnt" parameterType="_int">
		update board set readcnt = readcnt + 1 where bno = #{bno}
	</update>
	
<!-- 상세 게시글 -->	
	<select id="selectOne" resultType="BoardDto" parameterType="_int">
		<!-- select * from board where bno=#{bno} order by BREF desc, BRE_STEP asc -->
		SELECT n.*, (SELECT mname FROM member m WHERE m.mid = n.mid) name FROM board n WHERE bno=#{bno }
	</select>
	
<!-- 게시글 등록 -->	
	<insert id="insert" parameterType="BoardDto">
		<selectKey keyProperty="bno" resultType="_int" order="BEFORE">
		select SEQ_BOARD_BNO.nextval nextval from dual
		</selectKey>
		INSERT INTO board VALUES (#{bno}, #{btitle }, #{bcontent }, #{mid }, default, default, #{bno }, 0, 0)
 	</insert>

<!-- 글 수정 -->	
	<update id="update" parameterType="BoardDto">
		update BOARD set btitle=#{btitle}, bcontent=#{bcontent} where bno=#{bno}
	</update>
	
<!-- 글 삭제 -->	
	<delete id="delete" parameterType="_int">
		delete from board where bno=#{bno}
	</delete>

