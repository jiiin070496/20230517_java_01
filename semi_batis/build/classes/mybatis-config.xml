<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd" >
<configuration>
	<settings>
		<setting name="jdbcTypeForNull" value="NULL"/>	
		<setting name="mapUnderscoreToCamelCase" value="true"/>	
	</settings>
	<typeAliases>
		<typeAlias type="semi_project.board.model.dto.AttachFileDto" alias="AttachFileDto"/>
		<typeAlias type="semi_project.board.model.dto.BoardDto" alias="BoardDto"/>
		<typeAlias type="semi_project.member.model.dto.member" alias="member"/>
	</typeAliases>
	<environments default="aaa">
		<environment id="aaa">
			<transactionManager type="JDBC"></transactionManager>
			<dataSource type="POOLED">
				<property name="driver" value="oracle.jdbc.driver.OracleDriver"/>
				<property name="url" value="jdbc:oracle:thin:@127.0.0.1:1521:xe"/>
				<property name="username" value="semi"/>
				<property name="password" value="semi"/>
			</dataSource>
		</environment>
	</environments>
	<mappers>
		<mapper resource="mappers/board-mapper.xml"/>
		<mapper resource="mappers/member-mapper.xml"/>
	</mappers>
</configuration>
